@model int 
@*@{
    ViewBag["Title"] = "Edit";
}*@
<body>
    <div class="row">
        <div class="col">
            <select class="mb-3 btn btn-light" id="language-Selector">
                <option value="en">English</option>
                <option value="ar">Arabic</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col mb-3">
            <h5 class="pb-3 pt-3 text-center text-white bg-info">
                System Configuration
            </h5>
        </div>
    </div>
    <div class="border">
        <div class="row">

            <form asp-action="Edit">
                <div class="form-group col-3 m-3">
                    <label class="control-label">Limitation Days</label>
                    <input name="limitationDays" class="form-control" value="@Model" />
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary m-3" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
    <div>
        <a btn btn-info text-white" asp-controller="Home" asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
