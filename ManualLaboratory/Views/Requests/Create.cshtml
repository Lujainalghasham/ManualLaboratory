@model ManualLaboratory.Models.VMCollege

@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.ErrorMessage is not null)
{
    <div class="text-danger h2 w-50">
        @ViewBag.ErrorMessage
    </div>
}
<div class="row">
    <div class="col">
        <form asp-action="Create">


            <div class="row">
                <div class="col">
                    <select class="mb-3 btn btn-light" id="language-Selector">
                        <option value="en">English</option>
                        <option value="ar">Arabic</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <h5 class="pb-3 pt-3 text-center text-white bg-info">
                        Students and Screening Application Form
                    </h5>
                </div>
            </div>





            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="request.NationalId" class="control-label text-info"></label>
                        <input asp-for="request.NationalId" class="form-control" />
                        <span asp-validation-for="request.NationalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.UniversityNo" class="control-label text-info"></label>
                        <input asp-for="request.UniversityNo" class="form-control" />
                        <span asp-validation-for="request.UniversityNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.StudentStatus" class="control-label text-info"></label>
                        <select asp-for="request.StudentStatus" class="form-select">
                            <option></option>
                            <option value="New Student">New Student</option>
                            <option value="Intern">Intern</option>
                        </select>
                        <span asp-validation-for="request.StudentStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.College" class="control-label"></label>
                        <select asp-for="request.College" asp-items="Model.CollegesSelectList">
                            
                        </select>
                       @* <label asp-for="College" class="control-label text-info"></label>
                        <select asp-for="College" class="form-select">
                            <option>College</option>
                            <option>الطب البشري(المقر الرئيسي)</option>
                            <option>الطب والعلوم الطبية(القطاع الجنوبي)</option>
                            <option>طب الأسنان(المقر الرئيسي)</option>
                            <option>الصيدلة(المقر الرئيسي)</option>
                            <option>الصيدلة(القطاع الجنوبي)</option>
                            <option>العلوم التطبيقية</option>
                            <option>البصريات</option>
                            <option>التمريض</option>
                            <option>التأهيل الطبي</option>
                            <option>العلوم الصحية</option>
                            <option>الصحة العامة والمعلوماتية</option>
                            <option>كلية الزراعة</option>
                        </select>*@
                        <!-- <input asp-for="College" class="form-control" /> -->
                        <span asp-validation-for="request.College" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.FirstNameEn" class="control-label text-info"></label>
                        <input asp-for="request.FirstNameEn" class="form-control" />
                        <span asp-validation-for="request.FirstNameEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.FatherNameEn" class="control-label text-info"></label>
                        <input asp-for="request.FatherNameEn" class="form-control" />
                        <span asp-validation-for="request.FatherNameEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.GrandfatherNameEn" class="control-label text-info"></label>
                        <input asp-for="request.GrandfatherNameEn" class="form-control" />
                        <span asp-validation-for="request.GrandfatherNameEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.FamilyNameEn" class="control-label text-info"></label>
                        <input asp-for="request.FamilyNameEn" class="form-control" />
                        <span asp-validation-for="request.FamilyNameEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.FirstNameAr" class="control-label text-info"></label>
                        <input asp-for="request.FirstNameAr" class="form-control" />
                        <span asp-validation-for="request.FirstNameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.FatherNameAr" class="control-label text-info"></label>
                        <input asp-for="request.FatherNameAr" class="form-control" />
                        <span asp-validation-for="request.FatherNameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.GrandfatherNameAr" class="control-label text-info"></label>
                        <input asp-for="request.GrandfatherNameAr" class="form-control" />
                        <span asp-validation-for="request.GrandfatherNameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.FamilyNameAr" class="control-label text-info"></label>
                        <input asp-for="request.FamilyNameAr" class="form-control" />
                        <span asp-validation-for="request.FamilyNameAr" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.Email" class="control-label text-info"></label>
                        <input asp-for="request.Email" class="form-control" />
                        <span asp-validation-for="request.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.PhoneNo" class="control-label text-info"></label>
                        <input asp-for="request.PhoneNo" class="form-control" placeholder="05********" />
                        <span asp-validation-for="request.PhoneNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.BirthDate" class="control-label text-info"></label>
                        <input asp-for="request.BirthDate" type="date" class="form-control" />
                        <span asp-validation-for="request.BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="request.MidecalfileNo" class="control-label text-info"></label>
                        <input asp-for="request.MidecalfileNo" class="form-control" />
                        <span asp-validation-for="request.MidecalfileNo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <li class="text-danger">
                        In case the Id is not available, please attach a copy
                        of Qassim University student file
                    </li>
                </div>
            </div>
            <hr class="bg-dark">
            <div class="row">
                <div class="col">
                    <h5 class="text-info">Kindly select a suitable date for the needed tests.</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        @*<label asp-for="DateSelected" class="control-label text-info"></label>
                        <input asp-for="DateSelected" type="date" class="form-control" />
                        <span asp-validation-for="DateSelected" class="text-danger"></span>*@
                        <select asp-for="request.DateSelected" class=" form-control">
                            @if (ViewBag.AvalibleDates is not null)
                            {
                                var avalibleDates = (List<DateTime>)ViewBag.AvalibleDates;
                                foreach (var avalibleDate in avalibleDates)
                                {
                                    <option>@avalibleDate.ToLongDateString()</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="flexCheckChecked" required>
                    <label for="flexCheckChecked" class="form-check-label mb-3">
                        I declare that the
                        above-mentioned data is accurate and filled out by me personally.
                    </label>
                </div>
            </div>
            <hr class="bg-dark">
            <div class="row">
                <div class="col text-danger">
                    <h4>Important Notes</h4>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <ul class="text-info">
                        <li>Lab is open from 8:00 AM till 1:00 PM</li>
                        <li>
                            Students that did not submit a request through the portal will not be
                            accepted
                        </li>
                        <li>
                            Blood resulted within 14 working days, kindly bring the approved
                            university/institution tests` form filled out.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-info text-white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
